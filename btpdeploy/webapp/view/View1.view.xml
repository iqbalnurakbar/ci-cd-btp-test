<mvc:View
    controllerName="btpdeploy.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <content>
            <VBox
                class="sapUiSmallMargin"
                justifyContent="Center"
                alignItems="Center"
                height="100%"
            >
                <Text
                    text="Welcome to My Page"
                    class="welcomeText"
                />
                <Button
                    text="Say Hello"
                    press=".sayHello"
                />
            </VBox>
        </content>
    </Page>
</mvc:View>
